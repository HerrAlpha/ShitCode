@model ErrorLogDashboard.Web.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
            <p class="text-sm text-gray-500 mt-1">
                Plan: <span class="font-medium text-indigo-600">@Model.SubscriptionPlan.Name</span> 
                (@Model.ProjectCount / @Model.SubscriptionPlan.MaxProjects Projects)
            </p>
        </div>
        
        <!-- Create Project Button -->
        @if (Model.ProjectCount < Model.SubscriptionPlan.MaxProjects)
        {
            <a asp-action="CreateProject" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg class="-ml-1 mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create Project
            </a>
        }
        else
        {
            <div class="flex items-center gap-2">
                <span class="text-sm text-red-600 font-medium">Project Limit Reached</span>
                <a asp-controller="Pricing" asp-action="Index" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Upgrade Plan
                </a>
            </div>
        }
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 mb-8">
        @foreach (var project in Model.Projects)
        {
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">@project.Name</h3>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-2">
                            @project.TechStack
                        </span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-auto">
                            Active
                        </span>
                    </div>
                    <div class="mt-4 grid grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Errors</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900">@project.TotalErrors</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500 truncate">Last 24h</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900">@project.ErrorsLast24Hours</dd>
                        </div>
                    </div>
                    <div class="mt-4 border-t border-gray-200 pt-4">
                        <div class="text-xs text-gray-500">
                            <p class="font-medium">API Key:</p>
                            <code class="block bg-gray-50 p-1 rounded mt-1 break-all">@project.ApiKey</code>
                        </div>
                        <div class="text-xs text-gray-500 mt-2">
                            <p class="font-medium">Security Key:</p>
                            <code class="block bg-gray-50 p-1 rounded mt-1 break-all">@project.SecurityKey</code>
                        </div>
                        <div class="text-xs text-gray-500 mt-2">
                            <p class="font-medium">Webhook URL:</p>
                            <code class="block bg-gray-50 p-1 rounded mt-1 break-all">@Context.Request.Scheme://@Context.Request.Host/api/ingest/@project.ApiKey</code>
                        </div>
                        <div class="mt-4 flex gap-2">
                            <a asp-action="ViewLogs" asp-route-id="@project.Id" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                <svg class="-ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                View Logs
                            </a>
                            <form asp-action="DeleteProject" asp-route-id="@project.Id" method="post" class="flex-1" onsubmit="return confirm('Are you sure you want to delete this project? All error logs will be lost.');">
                                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    <svg class="-ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-4 sm:px-6">
                    <div class="text-sm">
                        <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">View logs <span aria-hidden="true">&rarr;</span></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
