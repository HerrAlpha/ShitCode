    }

    jsonData, _ := json.Marshal(payload)

    req, _ := http.NewRequest("POST", webhookURL, bytes.NewBuffer(jsonData))
    req.Header.Set("Content-Type", "application/json")
    req.Header.Set("X-Security-Key", securityKey)

