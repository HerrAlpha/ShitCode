@{
    ViewData["Title"] = "Home";
}

<style>
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }
    .animate-fade-in-up { animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
    .animate-float { animation: float 6s ease-in-out infinite; }
    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    
    .ripped-paper-left {
        clip-path: polygon(
            20px 0, 100% 0, 100% 100%, 20px 100%,
            0px 95%, 15px 90%, 0px 85%, 15px 80%,
            0px 75%, 15px 70%, 0px 65%, 15px 60%,
            0px 55%, 15px 50%, 0px 45%, 15px 40%,
            0px 35%, 15px 30%, 0px 25%, 15px 20%,
            0px 15%, 15px 10%, 0px 5%
        );
        filter: drop-shadow(0 20px 13px rgb(0 0 0 / 0.03)) drop-shadow(0 8px 5px rgb(0 0 0 / 0.08));
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }
</style>

<!-- Hero Section -->
<div class="relative bg-white overflow-hidden">
    <!-- Immersive Background -->
    <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
        <div class="absolute top-0 right-1/4 w-96 h-96 bg-indigo-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-32 left-1/3 w-96 h-96 bg-pink-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto relative z-10 pt-20 pb-16 lg:pb-32 px-4 sm:px-6 lg:px-8">
