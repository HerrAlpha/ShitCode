                    <a asp-controller="Dashboard" asp-action="Index" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 transition-all duration-200 shadow-lg hover:shadow-indigo-500/30 transform hover:-translate-y-1">
                        Go to Dashboard
                    </a>
                    <a asp-controller="Docs" asp-action="Index" class="inline-flex items-center justify-center px-8 py-4 border border-gray-200 text-lg font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200 shadow-sm hover:shadow-md">
                        View Documentation
                    </a>
                </div>
                <div class="mt-8 flex items-center justify-center lg:justify-start space-x-4 text-sm text-gray-500 animate-fade-in-up delay-300">
                    <div class="flex items-center">
                        <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Free Tier
                    </div>
                    <div class="flex items-center">
                        <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        No Credit Card
                    </div>
                </div>
            </div>
            <div class="lg:col-span-6 mt-16 lg:mt-0 relative pl-8">
                <div class="relative mx-auto w-full rounded-2xl lg:max-w-md animate-float ring-1 ring-gray-900/5 overflow-hidden bg-white ripped-paper-left transform rotate-2 hover:rotate-0 transition-transform duration-500 shadow-2xl">
                    <div class="absolute top-0 left-0 w-full h-10 bg-gray-50 border-b border-gray-100 flex items-center px-4 space-x-2 pl-10">
                        <div class="w-3 h-3 rounded-full bg-red-400"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400"></div>
                    </div>
                    <img class="w-full mt-10 pl-6" src="~/images/hero-programmer.png" alt="Tired programmer dealing with bugs">
                </div>
                <!-- Decorative Elements -->
                <div class="absolute -top-10 -right-10 w-24 h-24 bg-yellow-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
                <div class="absolute -bottom-10 -left-10 w-24 h-24 bg-pink-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
            </div>
        </div>
    </div>
</div>

