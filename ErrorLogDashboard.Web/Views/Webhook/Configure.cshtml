@model ErrorLogDashboard.Web.Models.Project
@{
    ViewData["Title"] = $"Webhook Configuration - {Model.Name}";
    Layout = "_DashboardLayout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <a asp-controller="Dashboard" asp-action="ViewLogs" asp-route-id="@Model.IdProject" class="text-indigo-600 hover:text-indigo-900 flex items-center">
            <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Error Logs
        </a>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Webhook Configuration for @Model.Name
            </h3>
            <p class="mt-1 text-sm text-gray-500">
                Configure webhooks to receive notifications when errors occur in this project.
            </p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
            @TempData["Error"]
        </div>
    }

    <!-- Add New Webhook Form -->
    <div class="bg-white shadow sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Add New Webhook</h3>
            <form asp-action="Create" method="post" class="space-y-4" id="webhookForm">
                <input type="hidden" name="projectId" value="@Model.IdProject" />
                
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" name="name" id="name" required
                           class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="e.g., Slack Notifications">
                </div>

                <div>
                    <label for="url" class="block text-sm font-medium text-gray-700">Webhook URL</label>
                    <input type="url" name="url" id="url" required
                           class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="https://example.com/webhook">
                    <p class="mt-1 text-sm text-gray-500">The endpoint where error notifications will be sent</p>
                </div>

                <div>
                    <label for="secretToken" class="block text-sm font-medium text-gray-700">Secret Token (Optional)</label>
                    <input type="text" name="secretToken" id="secretToken"
                           class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="Your secret token">
                    <p class="mt-1 text-sm text-gray-500">Optional security token sent in X-Webhook-Secret header</p>
                </div>

                <div class="flex gap-2">
                    <button type="submit" 
                            class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Add Webhook
                    </button>
                    <button type="button" onclick="testWebhook()"
                            class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Test Connection
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Existing Webhooks -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Configured Webhooks</h3>
        </div>
        
        @if (!Model.Webhooks.Any())
        {
            <div class="px-4 py-12 sm:px-6 text-center border-t border-gray-200">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No webhooks configured</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by adding your first webhook above.</p>
            </div>
        }
        else
        {
            <ul class="divide-y divide-gray-200">
                @foreach (var webhook in Model.Webhooks.OrderByDescending(w => w.CreatedAt))
                {
                    <li class="px-6 py-4">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center">
                                    <h4 class="text-sm font-medium text-gray-900">@webhook.Name</h4>
                                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(webhook.IsActive ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                        @(webhook.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                                <p class="mt-1 text-sm text-gray-500">@webhook.Url</p>
                                <p class="mt-1 text-xs text-gray-400">Created: @webhook.CreatedAt.ToString("yyyy-MM-dd HH:mm UTC")</p>
                            </div>
                            <div class="flex gap-2">
                                <form asp-action="Toggle" method="post" class="inline">
                                    <input type="hidden" name="id" value="@webhook.IdWebhook" />
                                    <input type="hidden" name="projectId" value="@Model.IdProject" />
                                    <button type="submit" class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">
                                        @(webhook.IsActive ? "Disable" : "Enable")
                                    </button>
                                </form>
                                <form asp-action="Delete" method="post" class="inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this webhook?');">
                                    <input type="hidden" name="id" value="@webhook.IdWebhook" />
                                    <input type="hidden" name="projectId" value="@Model.IdProject" />
                                    <button type="submit" class="text-sm text-red-600 hover:text-red-900 font-medium">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>

    <!-- Webhook Payload Documentation -->
    <div class="mt-6 bg-gray-50 shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Webhook Payload Format</h3>
            <p class="text-sm text-gray-600 mb-4">Your endpoint will receive a POST request with the following JSON payload:</p>
            <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg text-xs overflow-x-auto"><code>{
  "event": "error.created",
  "timestamp": "2025-12-06T09:00:00Z",
  "error": {
    "id": "guid",
    "message": "Error message",
    "stackTrace": "Stack trace...",
    "summary": "AI-generated summary (JSON format with priority)",
    "status": "Open",
    "createdAt": "2025-12-06T09:00:00Z"
  },
  "project": {
    "id": "guid"
  }
}</code></pre>
            <p class="mt-4 text-sm text-gray-600">Headers:</p>
            <ul class="mt-2 text-sm text-gray-600 list-disc list-inside">
                <li><code class="bg-gray-200 px-1 rounded">Content-Type: application/json</code></li>
                <li><code class="bg-gray-200 px-1 rounded">X-Webhook-Secret: your-secret-token</code> (if configured)</li>
            </ul>
        </div>
    </div>
</div>

<script>
    async function testWebhook() {
        const url = document.getElementById('url').value;
        const secretToken = document.getElementById('secretToken').value;
        
        if (!url) {
            alert('Please enter a webhook URL first');
            return;
        }
        
        const response = await fetch('@Url.Action("Test", "Webhook")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ url, secretToken })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('✅ ' + result.message);
        } else {
            alert('❌ ' + result.message);
        }
    }
</script>
